---
import { siteConfig } from "../config";
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container footer-container">
    <div class="footer-content glass-card">
      <div class="footer-section">
        <h3>{siteConfig.name}</h3>
        <p>
          Více než {siteConfig.company.yearsInBusiness} let působíme úspěšně v oblasti
          práce se sklem v České republice.
        </p>
      </div>

      <div class="footer-section">
        <h4>Kontakt</h4>
        <p>
          {siteConfig.contact.address.street}<br />
          {siteConfig.contact.address.zip}
          {siteConfig.contact.address.city}<br />
          <a href={`tel:${siteConfig.contact.phoneLink}`}
            >{siteConfig.contact.phone}</a
          ><br />
          <a href={`mailto:${siteConfig.contact.email}`}
            >{siteConfig.contact.email}</a
          >
        </p>
      </div>

      <div class="footer-section">
        <h4>Sledujte nás</h4>
        <div class="social-links">
          <a
            href={siteConfig.social.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="social-link"
          >
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
            Facebook
          </a>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>
        &copy; {currentYear}
        {siteConfig.name}. Všechna práva vyhrazena.
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--glass-white-medium);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    padding: 3rem 0 1.5rem;
    margin-top: 5rem;
    border-top: 2px solid var(--glass-border);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    color: var(--accent-primary);
    margin-bottom: 1rem;
  }

  .footer-section h4 {
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }

  .footer-section p {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.8;
  }

  .footer-section a {
    color: var(--accent-primary);
    transition: color var(--transition-fast);
  }

  .footer-section a:hover {
    color: var(--accent-primary-hover);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--glass-white-medium);
    border-radius: var(--radius-sm);
    transition: all var(--transition-smooth);
    border: 1px solid var(--glass-border);
  }

  .social-link:hover {
    background: var(--glass-white-strong);
    transform: translateY(-2px);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--glass-border);
  }

  .footer-bottom p {
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 2rem 0 1rem;
      margin-top: 3rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 1.5rem;
    }
  }
</style>
