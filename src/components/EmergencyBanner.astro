---
interface Props {
  phone: string;
  showAlert: boolean;
}

const { phone, showAlert } = Astro.props;
---

{
  showAlert && (
    <div class="emergency-banner">
      <div class="container">
        <div class="emergency-content">
          <div class="emergency-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
            </svg>
          </div>
          <div class="emergency-text">
            <span class="emergency-label">Řešíme i havarijní situace</span>
            <a href={`tel:${phone.replace(/\s/g, "")}`} class="emergency-phone">
              {phone}
            </a>
          </div>
          <div class="emergency-pulse" />
        </div>
      </div>
    </div>
  )
}

<style>
  .emergency-banner {
    background: linear-gradient(
      135deg,
      var(--color-medium) 0%,
      var(--color-darkest) 100%
    );
    color: var(--text-light);
    padding: 0;
    box-shadow: 0 4px 20px rgba(63, 114, 175, 0.4);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    margin: 0;
  }

  .emergency-banner::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 100%
    );
    animation: shimmer 3s infinite;
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  .emergency-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    position: relative;
    z-index: 1;
    padding: 1.5rem 0;
  }

  .emergency-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.3);
    animation: pulse-ring 2s infinite;
    flex-shrink: 0;
  }

  @keyframes pulse-ring {
    0%,
    100% {
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
    }
    50% {
      box-shadow: 0 0 0 15px rgba(255, 255, 255, 0);
    }
  }

  .emergency-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    text-align: left;
  }

  .emergency-label {
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.95;
  }

  .emergency-phone {
    color: var(--text-light);
    font-size: 1.75rem;
    font-weight: 700;
    text-decoration: none;
    transition: all var(--transition-fast);
    letter-spacing: 1px;
  }

  .emergency-phone:hover {
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
    transform: scale(1.05);
  }

  .emergency-pulse {
    width: 12px;
    height: 12px;
    background: #fff;
    border-radius: 50%;
    animation: pulse-dot 1.5s infinite;
    flex-shrink: 0;
  }

  @keyframes pulse-dot {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(0.8);
    }
  }

  @media (max-width: 768px) {
    .emergency-banner {
      padding: 1rem 0.5rem;
    }

    .emergency-content {
      gap: 1rem;
    }

    .emergency-icon {
      width: 48px;
      height: 48px;
    }

    .emergency-icon svg {
      width: 24px;
      height: 24px;
    }

    .emergency-text {
      gap: 0.125rem;
    }

    .emergency-label {
      font-size: 0.75rem;
    }

    .emergency-phone {
      font-size: 1.25rem;
    }

    .emergency-pulse {
      display: none;
    }
  }
</style>
