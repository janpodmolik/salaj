---
import { siteConfig } from "../config";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = `${siteConfig.name} - ${siteConfig.tagline}`,
  description = siteConfig.description,
} = Astro.props;
---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/salaj/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts - Czech language support (latin-ext) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Work+Sans:wght@300;400;500;600&display=swap&subset=latin-ext"
      rel="stylesheet"
    />

    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="stylesheet" href="/salaj/styles/global.css" />
    <link rel="stylesheet" href="/salaj/styles/sections.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/glightbox@3.2.0/dist/css/glightbox.min.css"
    />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/glightbox@3.2.0/dist/js/glightbox.min.js"
    ></script>
    <style is:inline>
      /* GLightbox custom styles - blur background instead of black */
      .glightbox-container .goverlay {
        background: rgba(17, 45, 78, 0.3) !important;
        backdrop-filter: blur(25px) !important;
        -webkit-backdrop-filter: blur(25px) !important;
      }

      /* Make images scale to fit like SwiftUI .scaleToFit */
      .gslide-media {
        width: 100% !important;
        height: 100% !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
      }

      .gslide-image {
        width: 100% !important;
        height: 100% !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
      }

      .gslide-image img {
        max-width: 95vw !important;
        max-height: 85vh !important;
        width: auto !important;
        height: auto !important;
        object-fit: contain !important;
        display: block !important;
      }

      /* Dynamic container sizing */
      .gslide-inline,
      .gslide-external {
        max-width: 95vw !important;
        max-height: 85vh !important;
      }

      .glightbox-clean .gdesc-inner {
        max-width: 95vw !important;
      }

      .glightbox-clean .gslide-description {
        background: rgba(249, 247, 247, 0.95) !important;
        backdrop-filter: blur(15px) !important;
        -webkit-backdrop-filter: blur(15px) !important;
        border-radius: 12px !important;
        padding: 1rem !important;
        color: #1a2332 !important;
      }

      .glightbox-clean .gslide-title {
        color: #3f72af !important;
        font-weight: 600 !important;
        font-family: "Poppins", sans-serif !important;
        margin-bottom: 0.5rem !important;
      }

      /* Navigation buttons with glassmorphism */
      .gnext,
      .gprev {
        background: rgba(249, 247, 247, 0.3) !important;
        backdrop-filter: blur(10px) !important;
        -webkit-backdrop-filter: blur(10px) !important;
        border: 2px solid rgba(255, 255, 255, 0.3) !important;
        border-radius: 50% !important;
        transition: all 0.3s ease !important;
        width: 50px !important;
        height: 50px !important;
        z-index: 100000 !important;
      }

      .gnext:hover,
      .gprev:hover {
        background: rgba(249, 247, 247, 0.5) !important;
        transform: scale(1.1) !important;
        border-color: rgba(255, 255, 255, 0.5) !important;
      }

      .gclose {
        background: rgba(249, 247, 247, 0.3) !important;
        backdrop-filter: blur(10px) !important;
        -webkit-backdrop-filter: blur(10px) !important;
        border: 2px solid rgba(255, 255, 255, 0.3) !important;
        border-radius: 50% !important;
        width: 50px !important;
        height: 50px !important;
        z-index: 100000 !important;
      }

      .gclose:hover {
        background: rgba(249, 247, 247, 0.5) !important;
        border-color: rgba(255, 255, 255, 0.5) !important;
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        .gslide-image img {
          max-width: 98vw !important;
          max-height: 80vh !important;
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
